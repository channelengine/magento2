<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminProductCeUpdatedAtVerificationTest">
        <annotations>
            <title value="Product should have ce_updated_at attribute"/>
            <stories value="Check product to have ce_updated_at custom attribute"/>
            <description value="Product should have a ce_updated_at custom attribute"/>
            <severity value="MINOR"/>
            <group value="ChannelEngineExtension"/>
            <testCaseId value="ChannelEngine-5" />
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <createData entity="CeTestProduct" stepKey="testProduct" />
        </before>

        <comment userInput="Checking product ce_updated_at..." stepKey="seeProduct" />
        <assertNotNull
            message="ce_updated_at should not be empty"
            stepKey="assertCeUpdatedAtExists">
            <actualResult type="string">$$testProduct.custom_attributes[ce_updated_at]$$</actualResult>
        </assertNotNull>

        <after>
            <deleteData createDataKey="testProduct" stepKey="deleteTestProduct" />
        </after>
    </test>
</tests>
