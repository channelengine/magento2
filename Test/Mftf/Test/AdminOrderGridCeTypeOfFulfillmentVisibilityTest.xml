<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminOrderGridCeTypeOfFulfillmentVisibilityTest">
        <annotations>
            <title value="Check if CE Type of Fulfillment grid column is displayed correctly"/>
            <stories value="Check order grid for CE Type of Fulfillment"/>
            <description value="CE Type of Fulfillment contains data exported from ChannelEngine."/>
            <severity value="MINOR"/>
            <group value="ChannelEngineExtension"/>
        </annotations>

        <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>

        <comment userInput="Opening orders page..." stepKey="openOrdersPageComment" />
        <actionGroup ref="AdminOrdersPageOpenActionGroup" stepKey="goToOrders"/>

        <comment userInput="Checking CE Type of Fulfillment in the order grid..." stepKey="seeCeTypeOfFulfillmentTextComment" />
        <seeElement stepKey="seeCeTypeOfFulfillmentText" selector="{{OrderGridSection.ceTypeOfFulfillmentSpan}}" />
    </test>
</tests>
