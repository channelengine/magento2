<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminOrderGridCeChannelOrderNoVisibilityTest">
        <annotations>
            <title value="Check if CE Channel grid column is displayed correctly"/>
            <stories value="Check order grid"/>
            <description value="CE Channel column is filled with data from ChannelEngine"/>
            <severity value="MINOR"/>
<!--            <group value="ChannelEngineExtension"/>-->
        </annotations>

        <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>

        <comment userInput="Opening orders page..." stepKey="openOrdersPageComment" />
        <actionGroup ref="AdminOrdersPageOpenActionGroup" stepKey="goToOrders"/>

        <comment userInput="Checking CE Channel Order No in the order grid..." stepKey="seeCeChannelOrderNoTextComment" />
        <seeElement selector="{{OrderGridSection.ceChannelOrderNoSpan}}" stepKey="seeCeChannelOrderNoText" />
    </test>
</tests>
